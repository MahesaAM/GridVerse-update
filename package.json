{
  "name": "gridvid",
  "version": "3.4.4",
  "description": "Browser automation bot with React UI",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "vite",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "build": "vite build",
    "start": "electron .",
    "dist": "vite build && electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.22",
    "cross-env": "^10.1.0",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "vite": "^7.2.7"
  },
  "dependencies": {
    "@react-three/fiber": "^9.5.0",
    "@react-three/postprocessing": "^3.0.4",
    "@supabase/supabase-js": "^2.88.0",
    "@use-gesture/react": "^10.3.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "exiftool-vendored": "^35.0.0",
    "express": "^5.2.1",
    "ffmpeg-static": "^5.3.0",
    "file-saver": "^2.0.5",
    "fluent-ffmpeg": "^2.1.3",
    "framer-motion": "^12.25.0",
    "image-size": "^2.0.2",
    "jszip": "^3.10.1",
    "lucide-react": "^0.556.0",
    "node-fetch": "^3.3.2",
    "node-localstorage": "^3.0.5",
    "postprocessing": "^6.38.2",
    "puppeteer": "^24.32.1",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-anonymize-ua": "^2.4.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "puppeteer-extra-plugin-user-data-dir": "^2.4.1",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-router-dom": "^7.12.0",
    "react-spring": "^10.0.3",
    "react-virtualized-auto-sizer": "^2.0.2",
    "react-window": "^2.2.4",
    "tailwind-merge": "^3.4.0",
    "three": "^0.182.0",
    "uuid": "^13.0.0",
    "wait-on": "^9.0.3",
    "ws": "^8.19.0",
    "xlsx": "^0.18.5"
  },
  "build": {
    "productName": "GridVid",
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "compression": "store",
    "publish": [
      "github"
    ],
    "directories": {
      "output": "dist_installer"
    },
    "files": [
      "dist/**/*",
      "src/main/**/*",
      "src/preload/**/*",
      "src/automation/**/*",
      "package.json",
      "assets/**/*",
      "puppeteer-chromium/**/*",
      "browsers_mac/**/*"
    ],
    "asarUnpack": [
      "puppeteer-chromium/**/*",
      "browsers_mac/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "guid": "GridVid-Reborn-Official-Unique-ID",
      "allowToChangeInstallationDirectory": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": true
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/logo1.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}